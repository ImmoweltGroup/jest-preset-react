{
  "name": "@immowelt/jest-preset-react",
  "version": "0.0.0-development",
  "private": false,
  "author": "Immonet dev team <aegaeon@immonet.de> (https://immonet.de)",
  "license": "MIT",
  "description": "Common configuration options for Jest in React environments.",
  "main": "jest-preset.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/ImmoweltGroup/jest-preset-react.git"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src",
    "prettier": "prettier --write src/**/*.js",
    "release": "semantic-release"
  },
  "files": [
    "jest-preset.json",
    "src"
  ],
  "engines": {
    "node": ">=12.14.1",
    "yarn": ">=1.21.1"
  },
  "dependencies": {
    "identity-obj-proxy": "3.0.0"
  },
  "devDependencies": {
    "@immowelt/eslint-config-immowelt-base": "1.3.0",
    "@immowelt/jest-preset-node": "2.1.0",
    "@semantic-release/github": "6.0.2",
    "@semantic-release/npm": "6.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "eslint": "6.8.0",
    "eslint-plugin-compat": "3.9.0",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.22.1",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "semantic-release": "16.0.2"
  },
  "peerDependencies": {
    "babel-jest": "27.x",
    "enzyme": "3.x",
    "enzyme-adapter-react-16": "1.x",
    "jest": "23.x || 24.x"
  },
  "keywords": [
    "immowelt",
    "jest",
    "preset",
    "react"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master",
    "analyzeCommits": {
      "releaseRules": [
        {
          "type": "BREAKING",
          "release": "major"
        },
        {
          "type": "FEATURE",
          "release": "minor"
        },
        {
          "type": "BUGFIX",
          "release": "patch"
        },
        {
          "type": "SECURITY",
          "release": "patch"
        }
      ]
    }
  },
  "jest": {
    "preset": "@immowelt/jest-preset-node",
    "coveragePathIgnorePatterns": [
      "src/setupFiles/*"
    ]
  }
}
