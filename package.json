{
  "name": "@immowelt/jest-preset-react",
  "version": "0.0.0-development",
  "private": false,
  "author": "Immonet dev team <aegaeon@immonet.de> (https://immonet.de)",
  "license": "MIT",
  "description": "Common configuration options for Jest in React environments.",
  "main": "jest-preset.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/ImmoweltGroup/jest-preset-react.git"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src",
    "prettier": "prettier --write src/**/*.js",
    "release": "semantic-release"
  },
  "files": [
    "jest-preset.json",
    "src"
  ],
  "engines": {
    "node": ">=8.11.4",
    "yarn": ">=1.6.0"
  },
  "dependencies": {
    "identity-obj-proxy": "3.0.0"
  },
  "devDependencies": {
    "@immowelt/eslint-config-immowelt-react": "2.1.1",
    "@immowelt/jest-preset-node": "1.1.1",
    "eslint": "5.15.1",
    "jest": "23.6.0",
    "prettier": "1.18.2",
    "@semantic-release/github": "5.5.5",
    "@semantic-release/npm": "5.3.3",
    "semantic-release": "15.9.15"
  },
  "peerDependencies": {
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "jest": "^23.0.0",
    "babel-jest": "^23.0.0"
  },
  "keywords": [
    "immowelt",
    "jest",
    "preset",
    "react"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master",
    "analyzeCommits": {
      "releaseRules": [
        {
          "type": "BREAKING",
          "release": "major"
        },
        {
          "type": "FEATURE",
          "release": "minor"
        },
        {
          "type": "BUGFIX",
          "release": "patch"
        },
        {
          "type": "SECURITY",
          "release": "patch"
        }
      ]
    }
  },
  "jest": {
    "preset": "@immowelt/jest-preset-node",
    "coveragePathIgnorePatterns": [
      "src/setupFiles/*"
    ]
  }
}
